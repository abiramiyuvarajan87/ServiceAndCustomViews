<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.BoundServiceActivity">

    <Button
        android:id="@+id/print_timestamp_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Print Timestamp"
        android:onClick="printTimestamp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/timestamp_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/print_timestamp_button"
        tools:text="timestamp"
        />
    <Button
        android:id="@+id/stop_service_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Stop Service"
        android:onClick="stopService"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timestamp_textview"
        />
</android.support.constraint.ConstraintLayout>